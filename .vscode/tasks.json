{
    "version": "2.0.0",
    "tasks": [
     {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
       "-std=c++17",
       "-fdiagnostics-color=always",
       "-Wall",
       "-g",
       "-DDEBUG",
       "-I${workspaceFolder}/dependency/GLFW/include",
       "-L${workspaceFolder}/dependency/GLFW/lib-x86_64",
       "${workspaceFolder}/dependency/GLFW/lib-x86_64/libglfw3.a",
       "-I${workspaceFolder}/dependency/GLEW/include",
       "-L${workspaceFolder}/dependency/GLEW/lib",
       "${workspaceFolder}/dependency/GLEW/lib/libGLEW.a",
       "-I${workspaceFolder}/dependency/assimp/include",
       "-L${workspaceFolder}/dependency/assimp/lib",
       "${workspaceFolder}/dependency/assimp/lib/libzlibstatic.a",
       "${workspaceFolder}/dependency/assimp/lib/libassimp.a",
       "-I${workspaceFolder}/vendor",
       "${workspaceFolder}/vendor/imgui/*.cpp",
       "${workspaceFolder}/application/*.cpp",
       "${workspaceFolder}/application/camera/*.cpp",
       "${workspaceFolder}/glframework/*.cpp",
       "${workspaceFolder}/glframework/material/*.cpp",
       "${workspaceFolder}/glframework/light/*.cpp",
       "${workspaceFolder}/glframework/renderer/*.cpp",
       "${workspaceFolder}/glframework/tools/*.cpp",
       "${workspaceFolder}/glframework/framebuffer/*.cpp",
       "${workspaceFolder}/glframework/mesh/*.cpp",
       "${workspaceFolder}/*.cpp",
       "-o",
       "${workspaceFolder}/LearnOpenGL",
       "-framework",
       "OpenGL",
       "-framework",
       "Cocoa",
       "-framework",
       "IOKit",
       "-framework",
       "CoreVideo",
       "-framework",
       "CoreFoundation",
       "-Wno-deprecated"
      ],
      "options": {
       "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
       "kind": "build",
       "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang++"
     }
    ]
   }
   